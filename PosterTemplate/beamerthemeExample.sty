%% background
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% headline, footline
\definecolor{cb1}
{cmyk/HTML}{1.00,1.00,0.33,0.50/150d42}     % dark blue

% blocktitle, exampletitle
\definecolor{cbf}
{cmyk/HTML}{0.67,0.60,0.39,0.16/5e5f72}     % dark gray

% blockbody
\definecolor{cbb}
{named}{white}                              % white

% normal text, footline
\definecolor{cbn}
{cmyk/HTML}{0.34,0.28,0.27,0.00/ababad}     % light gray

\definecolor{naublue}{cmyk}{.80,.55,0,.55}
