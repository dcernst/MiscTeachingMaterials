%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% headline colors and fonts
\setbeamercolor{headline}{fg=naublue,bg=cf1}
%\setbeamercolor{title in headline}{fg=naublue}
%\setbeamercolor{author in headline}{fg=naugreen}
%\setbeamercolor{institute in headline}{fg=cf3}

% lines
\setbeamercolor{upper separation line head}{fg=naublue}
\setbeamercolor{separation line}{bg=naublue}

% footline colors and fonts
\setbeamercolor{footline}{fg=cf1, bg=naublue}
\setbeamerfont{footline}{size=\large,series=\bfseries}

% poster background, body colors, and fonts
\setbeamercolor*{normal text}{fg=cfn, bg=cbn}

% block environment
%\setbeamercolor*{block title}{fg=cff,bg=cbf}
\setbeamercolor*{block title}{fg=cff,bg=naublue}
\setbeamerfont{block title}{size=\Large,series=\bfseries}
\setbeamercolor*{block body}{fg=cfb,bg=cbb}

% example environment
\setbeamercolor*{example title}{bg=cff,fg=cbf}
\setbeamercolor*{example body}{fg=cfb,bg=cbb}
\setbeamercolor*{example text}{fg=cfb,bg=cbb}

\setbeamercolor{alerted text}{fg=purple}
%\setbeamercolor{alerted text}{series=\bfseries}

\setbeamercolor{structure}{fg=naublue}
% frametitle, item
\setbeamertemplate{itemize items}[triangle]

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
\vskip1ex
\begin{beamercolorbox}[rounded=true,shadow=false,leftskip=.5ex,colsep*=.5ex]{block title}
\usebeamerfont*{block title}\insertblocktitle
\end{beamercolorbox}
{\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
\usebeamerfont{block body}%
\begin{beamercolorbox}[rounded=true,shadow=false,colsep*=.5ex,sep=.5ex,rightskip=.5ex,vmode]{block body}%
\ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
}
\setbeamertemplate{block end}{
\end{beamercolorbox}
}

